@model IEnumerable<Prueba_Transporte2.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>VEHICULO</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoVehiculo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoVehiculo)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Placa">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Placa">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Placa">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
