@model IEnumerable<Prueba_Transporte2.Models.Bodega>

@{
    ViewData["Title"] = "Index";
}

<h1>BODEGA</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BodegaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BodegaId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BodegaId">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.BodegaId">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BodegaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
